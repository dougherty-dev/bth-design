<!DOCTYPE html>
<html lang="en-US" class="no-js">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="referrer" content="unsafe-url">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
    <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}

    {% if current_page %}
    <link rel="canonical" href="{{ current_page.url }}">
    {% endif %}

    <link rel="icon" href="{{ theme_url }}/../shared/img/favicon.ico">
{% if config.session.theme == "light" %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style-light.min.css" type="text/css">
{% else %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style.min.css" type="text/css">
{% endif %}
	<link rel="apple-touch-icon" sizes="180x180" href="{{ theme_url }}/../shared/img/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ theme_url }}/../shared/img/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ theme_url }}/../shared/img/favicon-16x16.png">
	<link rel="manifest" href="{{ theme_url }}/../shared/img/site.webmanifest">
</head>
